<article class="detail-article">
  <h1 class="article-detail-title">
    <%= @article.title %>
  </h1>
  <div class="glyphicon glyphicon-calendar" id="article-date">
    <%= @article.created_at.strftime("%b %d, %Y") %>
  </div>
  <div class="article-body">
    <%= @article.body %>
  </div>

  <% if user_signed_in? && current_user == @article.user %>
    <div class="edit-delete">
      <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-primary btn-lg btn-space" %>
    </div>
    <br>
    <div>
      <%= button_to "Delete Article", @article, method: :delete, class: "btn btn-primary btn-lg btn-space" %>
    </div>
  <% end %>

  <br>
  <div>
    <%= link_to "Back to Article", articles_path, class: "btn btn-primary btn-lg btn-space" %>
  </div>

</article>